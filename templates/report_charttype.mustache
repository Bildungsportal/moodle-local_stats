<form class="local_stats charttype row" action="" method="get" enctype="multipart/form-data">
    <input type="hidden" name="id" value="{{id}}" />
    <div class="col-md-1">
        <select name="forcetype" class="custom-select" data-initial-value="{{charttype}}">
            {{#types}}
                <option value="{{type}}"{{{selected}}}>{{label}}</option>
            {{/types}}
        </select>
    </div>
    <div class="col-md-2">
        <input type="hidden"   name="sumgraph" value="0" />
        <input type="checkbox" name="sumgraph" {{#sumgraph}}checked="checked"{{/sumgraph}} aria-describedby="{{uniqid}}-sumgraph-label" value="1">
        <span id="{{uniqid}}-sumgraph-label">{{#str}} report:sumgraph, local_stats {{/str}}</span>
    </div>
    <div class="col-md-2">
        <input type="hidden"   name="switchaxes" value="0" />
        <input type="checkbox" name="switchaxes" {{#switchaxes}}checked="checked"{{/switchaxes}} aria-describedby="{{uniqid}}-switchaxes-label" value="1">
        <span id="{{uniqid}}-switchaxes-label">{{#str}} report:switch_axes_graph, local_stats {{/str}}</span>
    </div>
    <div class="col-md-2">
        <input type="number"   name="amount_show" size="4" value="{{amount_show}}" style="width: 50px;" />
        <span id="{{uniqid}}-amount_show-label">{{#str}} report:amount:show, local_stats {{/str}}</span>
    </div>
    <div class="col-md-1">
        <input type="submit" class="btn btn-primary btn-block" value="{{#str}} view {{/str}}" />
    </div>
</form>
